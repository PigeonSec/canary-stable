[Unit]
Description=Canary Certificate Transparency Monitor
After=network.target

[Service]
Type=simple
User=canary
Group=canary
WorkingDirectory=/opt/canary
ExecStart=/opt/canary/canary
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/canary

# Environment
Environment="PORT=8080"

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=canary

[Install]
WantedBy=multi-user.target
